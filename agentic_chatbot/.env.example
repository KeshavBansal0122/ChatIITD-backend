# Google API Key for Gemini LLM (REQUIRED)
GOOGLE_API_KEY=your_google_api_key_here

# Qdrant Vector Database URL (Optional - defaults to http://localhost:6333)
# For Docker: http://qdrant:6333
# For local: http://localhost:6333
QDRANT_URL=http://localhost:6333

# Database URL (Optional - defaults to sqlite:///messages.db)
# For SQLite (default): sqlite:///messages.db
# For PostgreSQL: postgresql://user:password@db:5432/agentdb
DATABASE_URL=sqlite:///messages.db

# JWT Secret for signing access tokens (REQUIRED in production)
JWT_SECRET=change-this-secret-in-production

# JWT expiration time in minutes (Optional - defaults to 1440 = 24 hours)
JWT_EXP_MINUTES=1440

# Google OAuth Client ID for token validation (Optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
